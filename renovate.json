{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeType": "pr",
  "automerge": true,
  "extends": [
    "config:recommended"
  ],
  "ansible": {
    "enabled": true
  },
  "github-actions": {
    "enabled": true
  },
  "nix": {
    "enabled": false
  },
  "pep621": {
    "enabled": true
  },
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": true
    }
  ]
}
